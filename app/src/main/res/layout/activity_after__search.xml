<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:text="Sorry You didnt qualify for any college"
        android:textAlignment="center"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/QualifiedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dark"
        android:paddingVertical="20dp"
        android:background="@color/shrine"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed-light"
        android:text="College You Qualified For!"/>

    <ListView xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/result_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".after_Search">

    </ListView>
</LinearLayout>